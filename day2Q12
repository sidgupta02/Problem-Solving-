#include <stdio.h>

int main()
{
    for(int i=6;i>0;i--){
        for(int j=1;j<=6;j++){
            if(j<=i){
                printf("%d ",j);
            }
            else
            {
                printf("  ");
            }
            
        }
        for(int k=5;k>0;k--){
            if(k<=i){
                printf("%d ",k);
            }
            else
                printf("  ");
        }
        printf("\n");
    }

    return 0;
}
